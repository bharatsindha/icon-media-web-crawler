# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crawler_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_MIN_CONN=2
DB_MAX_CONN=10

# Crawler Settings
REQUEST_TIMEOUT=30
RATE_LIMIT_MIN=1.0
RATE_LIMIT_MAX=2.0
MAX_RETRIES=3
RETRY_DELAY=5

# User Agent
USER_AGENT=Mozilla/5.0 (compatible; MenuCrawler/1.0; +http://example.com/bot)

# Logging Settings
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# Crawler Behavior
RESPECT_ROBOTS_TXT=true
FOLLOW_REDIRECTS=true
VERIFY_SSL=true

# Processing Settings
BATCH_SIZE=100
PROCESS_SEQUENTIAL=true

# Keyword Filtering Settings
ENABLE_KEYWORD_FILTER=true
KEYWORD_EXCLUSIONS_FILE=keyword_exclusions.yaml
